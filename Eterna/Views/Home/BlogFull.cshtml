@using Eterna.ViewModels
@model IEnumerable<Blog>
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="span12">
                <div class="inner-heading">
                    <ul class="breadcrumb">
                        <li><a href="index.html">Home</a> <i class="icon-angle-right"></i></li>
                        <li class="active">Blog fullwidth</li>
                    </ul>
                    <h2>Blog fullwidth</h2>
                    <form action="/Home/Ara" method="post">
                        <input type="text" name="ara" placeholder="Ne Aramıştınız?" />
                        <input type="submit" value="ARA" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="content">
    <div class="container">
        <div class="row">
            <div class="span12">
                @foreach (Blog item in Model)
                {
                    <article>
                        <div class="row">
                            <div class="span8">
                                <div class="post-image">
                                    <div class="post-heading">
                                        <h3><a href="#">@item.Title</a></h3>
                                    </div>
                                    <img src="/Content/img/dummies/blog/img1.jpg" alt="" />
                                </div>
                            </div>
                            <div class="span4">
                                <div class="meta-post">
                                    <ul>
                                        <li><i class="icon-file"></i></li>
                                        <li>By <a href="#" class="author">@item.Writer</a></li>
                                        <li>On <a href="#" class="date">@item.Date.ToShortDateString()</a></li>
                                        <li>
                                            Tags:
                                            @foreach (var tag in item.BlogTag.Select(s=>s.Tag))
                                            {
                                                <a href="#">@tag.TagName </a>
                                            }

                                        </li>
                                    </ul>
                                </div>
                                <div class="post-entry">
                                    <p>
                                       @item.Write
                                    </p>
                                    <a href="#" class="readmore">Read more <i class="icon-angle-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </article>
                }
             
                <div id="pagination">
                    <span class="all">Page 1 of 3</span>
                    <span class="current">1</span>
                    <a href="#" class="inactive">2</a>
                    <a href="#" class="inactive">3</a>
                </div>
            </div>
        </div>
    </div>
</section>